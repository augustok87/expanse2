:root {
  --button-custom-hover-color: {{ settings.button_hover_color }};
}


/* ATC Button
  Jira : https://foundrybrands.atlassian.net/jira/software/c/projects/EC/boards/64?modal=detail&selectedIssue=EC-219
*/

.grid-item.grid-product .grid-item__content {
  display: flex;
  flex-direction: column-reverse;
}

.grid-product__actions_add_to_cart {
  position: relative;
  display: flex;
  justify-content: center;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin-right: var(--productTileMargin);
  padding-top: 1rem;
}

.btn-collection {
  border-radius: 30px;
  font-size: 0.7rem;
  white-space: nowrap;
  line-height: 1rem;
}

.btn-collection:hover {
  background-color: {{ settings.button_hover_color }};
  transition: 0.2s;
}

/* END Add to Cart button */


/* EC-271: Thumbnails scroller at product page */
.btn_thumbs_scroll {
  width: 50px;
  height: 35px;
  position: relative;
  background-color: #FFF;
  opacity: 1;
  left: 15px;
  transition: all .2s ease-in-out;
  padding: 10px;
}

.btn_thumbs_scroll_down:hover, .btn_thumbs_scroll_up:hover{
  cursor: pointer;
  transform: scale(1.5);
  background: #FFF;
  color: #000;
  background-color: #FFF;
}

.scroll_down_svg {
  opacity: 1 !important;
}

.scroll_up_svg {
  opacity: 1 !important;
  transform: rotate(180deg);
}
/* End of EC-271 */

